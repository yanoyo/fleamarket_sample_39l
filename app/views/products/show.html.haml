- content_for :head do
  %meta{name: "turbolinks-cache-control", content: "no-cache"}
.wrapper
  = render 'shared/header'
  = render 'shared/product-detail-breadcrumbs'
  %main
    .item-info
      .item-info__container
        .item-info__head
          = @product.name
        .item-info__content
          .item-info__content-left
            = render 'item-photos', product: @product
          .item-info__content-right
            = render 'item-table', product: @product
        .item-info__priceInfo
          .item-info__price
            ¥ #{@product.price}
          .item-info__tax
            (税別)
          .item-info__shippingCost
            送料込み
        - if user_signed_in?
          =link_to "購入画面に進む", buy_confirm_products_path, class:'purchase-btn buy-btn'
        - else
          =link_to "購入画面に進む", new_user_session_path, class:'purchase-btn buy-btn'
        .item-info__description
          = @product.description
        .item-info__buttons
          .item-info__buttons-left
            .item-info__buttons-favorite
              = link_to 'hoge' do
                = fa_icon 'heart', class: 'icon-like'
                いいね!
                99
            .item-info__buttons-report
              = link_to 'hoge' do
                = fa_icon 'flag', class: 'icon-flag'
                不適切な商品の報告
          .item-info__buttons-right
            = link_to 'https://www.mercari.com/jp/safe/description/' do
              = fa_icon 'lock', class: 'icon-lock'
              あんしん・あんぜんへの取り組み
        - if current_user.id == @product.user_id
          =link_to "商品の編集", edit_product_path(@product), class:'purchase-btn buy-btn'
          .or or
          - unless @product.status == 1
            = link_to "出品を停止する", "#", class: "product-single-container__btn-default btn-box__btn-gray"
          - else
            = link_to "出品を再開する", "#", class: "product-single-container__btn-default btn-box__btn-gray"
          = link_to "商品を削除する", "/products/#{@product.id}", method: :delete, class: "product-single-container__btn-default btn-box__btn-gray"
    .item-prevnext
      .item-prevnext__prev
        = link_to 'hoge', class: '' do
          = fa_icon 'chevron-left', class: 'icon-arrow'
          ダミー商品PREV
      .item-prevnext__next
        = link_to 'hoge', class: '' do
          ダミー商品NEXT
          = fa_icon 'chevron-right', class: 'icon-arrow'
    .item-share
      .item-share__textbox
      %ul.item-share__snsbox
        %li.icon-facebook
          = link_to 'https://www.facebook.com/share.php?u=hoge', class:'', target:'blank' do
            %i.fab.fa-facebook
        %li.icon-twitter
          = link_to 'https://twitter.com/intent/tweet?original_referer=hoge', class:'', target:'blank' do
            %i.fab.fa-twitter
        %li.icon-pinterest
          = link_to 'http://twitter.com/share?count=horizontal&original_referer=hoge', class:'', target:'blank' do
            %i.fab.fa-pinterest
  = render 'items-prddetail'
  = render 'shared/footer'
